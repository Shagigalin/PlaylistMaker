<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Заголовок -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/search_hint"
        app:navigationIcon="@drawable/strel"
        app:titleTextAppearance="@style/ToolbarTitleTextAppearance"
        app:titleTextColor="?attr/android:textColorPrimary"
        app:navigationIconTint="?attr/android:textColorPrimary"/>

    <!-- Основная область поиска -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_rounded_bg"
            android:paddingStart="12dp"
            android:paddingEnd="48dp"
            android:singleLine="true"
            android:hint="@string/search_hint"
            tools:text=""
            android:drawableStart="@drawable/poisk"
            android:fontFamily="@font/ys_display_regular"
            android:textFontWeight="400"
            android:textColor="?attr/colorOnSurface"
            android:titleTextColor="?attr/colorOnSurface"
            android:textColorHint="?attr/colorOnSurfaceVariant"/>

        <ImageView
            android:id="@+id/clear_button"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="16dp"
            android:src="@drawable/vector"
            android:contentDescription="@string/clear_search"
            android:visibility="gone"/>
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_results_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:padding="8dp"
        android:visibility="gone"
        tools:listitem="@layout/item_track"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/no_results_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:textColor="?attr/colorOnSurface"
        android:textSize="16sp"
        android:visibility="gone"
        tools:text="Ничего не найдено по запросу " />

</LinearLayout>