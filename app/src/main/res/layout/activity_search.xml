<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/search_hint"
        app:navigationIcon="@drawable/strel"
        app:titleTextAppearance="@style/ToolbarTitleTextAppearance"
        app:titleTextColor="?attr/android:textColorPrimary"
        app:navigationIconTint="?attr/android:textColorPrimary"/>

    <!-- Поисковая строка -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/edittext_rounded_bg"
            android:drawableStart="@drawable/poisk"
            android:drawablePadding="8dp"
            android:fontFamily="@font/ys_display_regular"
            android:hint="@string/search_hint"
            android:imeOptions="actionDone"
            android:paddingStart="12dp"
            android:paddingEnd="48dp"
            android:singleLine="true"
            android:textColor="?attr/colorOnSurface"
            android:textColorHint="?attr/colorSurface"
            android:textFontWeight="400"
            android:titleTextColor="?attr/colorSurface"
            tools:text="" />

        <ImageView
            android:id="@+id/clear_button"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/clear_search"
            android:src="@drawable/vector"
            android:visibility="gone" />
    </FrameLayout>

    <!-- ИСТОРИЯ ПОИСКА - ДОБАВЛЯЕМ ЗДЕСЬ -->
    <LinearLayout
        android:id="@+id/historyLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="16dp">

        <!-- Заголовок истории -->
        <TextView
            android:id="@+id/history_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/search_history"
            android:gravity="center"
            android:textSize="19sp"
            android:textFontWeight="500"
            android:fontFamily="@font/ys_display_medium"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"/>

        <!-- Список истории -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/history_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:listitem="@layout/item_track"/>

        <!-- Кнопка очистки истории -->
        <Button
            android:id="@+id/clear_history_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/clear_history"
            android:textSize="14sp"
            android:textFontWeight="500"
            android:fontFamily="@font/ys_display_medium"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_rounded_bg"
            app:backgroundTint="?attr/colorPrimaryContainer"
            android:textColor="?attr/colorOnPrimaryContainer"
            android:textAllCaps="false"/>

    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:visibility="gone"
        android:indeterminateTint="@color/progress_tint"/>

    <!-- Layout ошибки -->
    <LinearLayout
        android:id="@+id/errorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/errorImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/errorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connection_error"
            android:textSize="19sp"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight="400"
            android:textColor="?attr/android:textColorPrimary"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"/>

        <Button
            android:id="@+id/retryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/retry"
            android:textSize="14sp"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight="500"
            android:textAllCaps="false"
            android:background="@drawable/button_rounded_bg"
            app:backgroundTint="?attr/colorPrimaryContainer"
            android:textColor="?attr/colorOnPrimaryContainer"/>

    </LinearLayout>

    <!-- Layout нет результатов -->
    <LinearLayout
        android:id="@+id/noResultsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/noResultsImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/noResultsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_results_found"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight="400"
            android:textSize="19sp"
            android:textColor="?attr/android:textColorPrimary"
            android:gravity="center"/>

    </LinearLayout>

    <!-- RecyclerView результатов поиска -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_results_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="8dp"
        android:visibility="gone"
        tools:listitem="@layout/item_track"
        tools:visibility="visible"/>

</LinearLayout>