<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnPrimary">

    <!-- Основной контент, который будет сдвигаться BottomSheet'ом -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <!-- Зона плейсхолдера 360x360dp -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:background="?attr/colorSecondaryVariant"
                >

                <!-- Картинка плейлиста 312x312dp по центру -->
                <androidx.cardview.widget.CardView
                    android:layout_width="312dp"
                    android:layout_height="312dp"
                    android:layout_gravity="center"

                    app:cardElevation="0dp"
                    >

                    <ImageView
                        android:id="@+id/iv_playlist_cover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:padding="0dp"
                        tools:src="@drawable/placeholder"
                        android:background="?attr/colorSecondaryVariant"/>

                </androidx.cardview.widget.CardView>

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_gravity="top"
                    app:navigationIcon="@drawable/strel"
                    app:navigationIconTint="?attr/colorOnSurfaceVariant"
                    android:background="@android:color/transparent"
                    app:title=""
                    app:titleTextColor="?attr/colorOnPrimary" />

            </FrameLayout>

            <!-- Описательная часть плейлиста -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:background="?attr/colorSecondaryVariant">

                <!-- Название -->
                <TextView
                    android:id="@+id/tv_playlist_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textFontWeight="700"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:fontFamily="@font/ys_display_bold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    tools:text="Мой плейлист" />

                <!-- Описание -->
                <TextView
                    android:id="@+id/tv_playlist_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    android:textFontWeight="400"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:fontFamily="@font/ys_display_regular"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:visibility="gone"
                    tools:text="2022"
                    tools:visibility="visible" />

                <!-- Статистика (минуты и треки) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_total_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textFontWeight="400"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:fontFamily="@font/ys_display_regular"
                        tools:text="150 минут" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="3dp"
                        android:layout_marginHorizontal="6dp"
                        android:background="@drawable/ellipse_1"
                        app:navigationIconTint="?attr/colorOnSurfaceVariant"/>

                    <TextView
                        android:id="@+id/tv_track_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textFontWeight="400"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:fontFamily="@font/ys_display_regular"
                        tools:text="50 треков" />

                </LinearLayout>

                <!-- Кнопки действий -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageButton
                        android:id="@+id/btn_share"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/share2"
                        android:contentDescription="@string/share"
                        app:navigationIconTint="?attr/colorOnSurfaceVariant"
                        android:background="?attr/selectableItemBackgroundBorderless"/>



                    <ImageButton
                        android:id="@+id/btn_menu"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_menu"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/menu"
                        app:navigationIconTint="?attr/colorOnSurfaceVariant"/>

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Overlay для затемнения -->
    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:visibility="gone" />

    <!-- Bottom Sheet для списка треков -->
    <LinearLayout
        android:id="@+id/tracks_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bottom_sheet_bg"
        app:behavior_hideable="false"
        app:behavior_peekHeight="300dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <!-- Drag handle -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:background="@drawable/bottom_sheet_handle" />

        <!-- Заголовок -->
        <TextView
            android:id="@+id/tv_tracks_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tracks_in_playlist"
            android:textSize="16sp"
            android:textColor="?attr/android:textColorPrimary"
            android:fontFamily="@font/ys_display_medium"
            android:padding="16dp"
            android:gravity="center" />

        <!-- Заглушка для пустого списка -->
        <TextView
            android:id="@+id/tv_empty_tracks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_tracks_in_playlist"
            android:textSize="14sp"
            android:textColor="?attr/colorSurfaceVariant"
            android:fontFamily="@font/ys_display_regular"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone" />

        <!-- RecyclerView для списка треков -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tracks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:clipToPadding="false" />

    </LinearLayout>

    <!-- Bottom Sheet для меню -->
    <LinearLayout
        android:id="@+id/menu_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_bg"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="300dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <include
            android:id="@+id/menu_sheet"
            layout="@layout/bottom_sheet_playlist_menu" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>