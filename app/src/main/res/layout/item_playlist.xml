<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <!-- Обложка плейлиста с соотношением сторон 1:1 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="?attr/colorOnPrimaryContainer">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_playlist_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="gone"
                tools:src="@drawable/placeholder"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/iv_playlist_placeholder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/placeholder"
                app:tint="?attr/colorSurfaceVariant"
                android:visibility="visible"
                />

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <!-- Название плейлиста -->
    <TextView
        android:id="@+id/tv_playlist_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:textColor="?attr/android:textColorPrimary"
        android:fontFamily="@font/ys_display_regular"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/card_cover"
        app:layout_constraintStart_toStartOf="@id/card_cover"
        app:layout_constraintEnd_toEndOf="@id/card_cover"
        tools:text="Мой плейлист" />

    <!-- Количество треков -->
    <TextView
        android:id="@+id/tv_track_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="?attr/android:textColorPrimary"
        android:fontFamily="@font/ys_display_regular"
        app:layout_constraintTop_toBottomOf="@id/tv_playlist_name"
        app:layout_constraintStart_toStartOf="@id/card_cover"
        app:layout_constraintEnd_toEndOf="@id/card_cover"
        tools:text="10 треков" />

</androidx.constraintlayout.widget.ConstraintLayout>