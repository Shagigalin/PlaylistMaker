<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="?attr/colorOnPrimary"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:orientation="horizontal"
        android:padding="@dimen/padding_standard"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp"
        >

        <TextView
            android:id="@+id/button_back"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:background="@null"
            android:drawableStart="@drawable/strel"
            android:drawableTint="?attr/android:textColorPrimary"


            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/settings_title"
            android:textColor="?attr/android:textColorPrimary"
            android:textSize="@dimen/sp22"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight="500"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"

        >

        <TextView
            android:id="@+id/tema_button"
            style="@style/SettingItemStyle"
            android:text="@string/tema"
            app:drawableEndCompat="@drawable/off"
            android:textColor="?attr/android:textColorPrimary"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/share_button"
            style="@style/SettingItemStyle"
            android:text="@string/share"
            app:drawableEndCompat="@drawable/share"
            android:textColor="?attr/android:textColorPrimary"/>

        <TextView
            android:id="@+id/help_button"
            style="@style/SettingItemStyle"
            android:text="@string/help"
            app:drawableEndCompat="@drawable/help"
            android:textColor="?attr/android:textColorPrimary"/>

        <TextView
            android:id="@+id/strel_r_button"
            style="@style/SettingItemStyle"
            android:text="@string/strel_r"
            app:drawableEndCompat="@drawable/strel_r"
            android:textColor="?attr/android:textColorPrimary"/>

    </LinearLayout>

</LinearLayout>